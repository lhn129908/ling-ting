.container {
  width: 100%;
  height: 100%;
}
.container .bkg {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-bottom: 1px solid gray;
  margin-bottom: 15rpx;
  background: rgba(37, 37, 37, 0.8);
}
.container .bkg .bg-image {
  position: absolute;
  width: 100%;
  height: 400rpx;
  -webkit-transform-origin: top;
  transform-origin: top;
  background-size: cover;
  overflow: hidden;
  z-index: -1;
}
.container .bkg .bg-image .bg {
  width: 100%;
  height: 400rpx;
  -webkit-transform-origin: top;
  transform-origin: top;
  background-size: cover;
}
.container .bkg .touxiang {
  position: absolute;
  width: 250rpx;
  height: 200rpx;
  left: 60rpx;
  top: 60rpx;
}
.container .bkg .touxiang .tx {
  width: 225rpx;
  height: 225rpx;
}
.container .bkg .title {
  color: white;
  position: absolute;
  font-size: 20px;
  left: 340rpx;
  top: 50rpx;
}
.container .bkg .jjs {
  color: white;
  position: absolute;
  left: 340rpx;
  top: 240rpx;
  width: 350rpx;
}
.container .bkg .jjs .js {
  color: white;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size: 15px;
}
.container .uni-column {
  height: 50rpx;
}
.container .hh {
  margin-left: 50rpx;
}

