.hide {
  display: none;
}
.search .search-kuang {
  display: flex;
  border: 0.0125rem solid #f87373;
  margin: 0.5rem 2rem 0 2rem;
  height: 60rpx;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  line-height: 60rpx;
}
.search .search-kuang .input {
  flex: 5;
  margin-left: 2rem;
  margin-top: 0.25rem;
}
.search .search-kuang .button {
  flex: 1;
  background-color: #f87373;
  border-radius: 0rpx 30rpx 30rpx 0rpx;
  text-align: center;
  color: #f1f1f1;
}
.search .search-kuang .input-placeholder {
  font-size: 16px;
  color: #dddddd;
  font-style: italic;
}
.search .search-name {
  margin: 1.5rem 0 0.8rem 1.5rem;
  font-size: large;
  color: #f87373;
}
.search .scroll-view .msg-item {
  display: flex;
  margin: 0 2rem 0.8rem 1.5rem;
}
.search .scroll-view .msg-item .searchIcon {
  margin-right: 0.5rem;
}
.search .scroll-view .msg-item .user-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search .scroll-view .msg-item .user-title {
  font-style: italic;
  color: #5f90bd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search .recommend {
  margin: 1.5rem 0 0.8rem 1.5rem;
  font-weight: 700;
}
.search .search-music {
  margin: 0 0 0.8rem 1.5rem;
}
.search .search-music .searchIcon {
  margin: 8rpx 8rpx 0 5rpx;
}

